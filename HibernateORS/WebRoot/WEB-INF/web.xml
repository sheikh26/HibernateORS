<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>LoginCtrl</servlet-name>
    <servlet-class>Com.Ctrl.LoginCtrl</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>NameCtrl</servlet-name>
    <servlet-class>Com.Ctrl.NameCtrl</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>RollNoCtrl</servlet-name>
    <servlet-class>Com.Ctrl.RollNoCtrl</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>MarksheetCtrl</servlet-name>
    <servlet-class>Com.Ctrl.MarksheetCtrl</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>WelcomeCtrl</servlet-name>
    <servlet-class>Com.Ctrl.WelcomeCtrl</servlet-class>
  </servlet>





  <servlet-mapping>
    <servlet-name>LoginCtrl</servlet-name>
    <url-pattern>/LoginCtrl</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NameCtrl</servlet-name>
    <url-pattern>/NameCtrl</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RollNoCtrl</servlet-name>
    <url-pattern>/RollNoCtrl</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MarksheetCtrl</servlet-name>
    <url-pattern>/MarksheetCtrl</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>WelcomeCtrl</servlet-name>
    <url-pattern>/WelcomeCtrl</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
